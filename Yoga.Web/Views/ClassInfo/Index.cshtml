@using Yoga.Web.Common
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">@ViewBag.Title</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Thông tin tìm kiếm</h3>
    </div>
    <div class="panel-body">
        <form>
            <div class="row">
                <div class="form-group col-md-3">
                    <label for="TrainerId">Tên Huấn luận viên</label>
                    @Html.DropDownList("trainerId", CategoryReponsitory.GetTrainerSelectList(null, "--- Chọn ---"), new { @class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                    <label for="CustomerName">Tên học viên</label>
                    <input type="text" class="form-control" id="customerName" placeholder="" name="Phone">
                </div>
                <div class="col-md-12">
                    <button type="button" class="btn brn-default" onclick="searchClassInfo();"><i class="fa fa-search"></i>Tìm kiếm</button>
                    <button type="button" class="btn brn-primary" onclick="updateClassInfo();"><i class="fa fa-plus-circle"></i>Thêm Lớp mới</button>
                </div>
            </div>
        </form>
    </div>
</div>
<table id="dataTable" class="display">
    <thead>
        <tr>
            <th width="50px;">#</th>
            <th>Họ học viên</th>
            <th>Điện thoại</th>
            <th>Học phí</th>
            <th>Phí HLV</th>
            <th>Ngày bất đầu</th>
            <th>Tổng số buổi</th>
            <th>Huấn luận viên</th>
            <th>Thanh toán</th>
        </tr>
    </thead>
    <tbody></tbody>
    <tfoot>
        <tr>
            <th width="50px;">#</th>
            <th>Họ học viên</th>
            <th>Điện thoại</th>
            <th>Học phí</th>
            <th>Phí HLV</th>
            <th>Ngày bất đầu</th>
            <th>Tổng số buổi</th>
            <th>Huấn luận viên</th>
            <th>Thanh toán</th>
        </tr>
    </tfoot>
</table>

<script>
    $(document).ready(function () {

        $("#trainerId").select2();

        $('#dataTable').DataTable({
            serverSide: false,
            ajax: {
                "url": getAjaxSource(),
                "dataSrc": ""
            },
            "pageLength": 25,
            columns: [
                { "data": "ClassInfoId" },
                { "data": "Customer.Name" },
                { "data": "Customer.Phone" },
                { "data": "Price" },
                { "data": "TrainerPrice" },
                { "data": "StartDate" },
                { "data": "TotalDays" },
                { "data": "Trainer.TrainerName" },
                { "data": "ClassInfoId" },
            ],
            fnPreDrawCallback: function (settings) {
            },
            fnDrawCallback: function (settings) {
            },
            fnRowCallback: function (nRow, aData) {
                $('td:eq(0)', nRow).html(setIconVisibility(aData.ClassInfoId));
                $('td:eq(5)', nRow).html(formateDate(parseJsonDate(aData.StartDate)));
            },
        });
    });

    function getAjaxSource() {
        return '/ClassInfo/GetList?trainerId=' + $('#trainerId').val() + '&customerName=' + $('#customerName').val();
    }

    function reloadTableClassInfo() {
        var oTable = $('#dataTable').DataTable();
        oTable.ajax.url(getAjaxSource());
        oTable.ajax.reload();
    }

    function setIconVisibility(id) {
        var editString = '<a class="action-icon" style="color:#07078C" href= "javascript:void(0)" onclick="updateClassInfo(' + id + ')"><span class="glyphicon glyphicon-edit" title="Sửa"></span></a>  ';
        var delString = '<a class="action-icon" style="color:#E91E63" href= "javascript:void(0)" onclick="deleteClassInfo(' + id + ')" ><span class="glyphicon glyphicon-remove-circle" title="Xóa"></span></a>';
        return editString + delString;
    }

    function searchClassInfo() {
        reloadTableClassInfo();
    }

    function updateClassInfo(id) {
        $.ajax({
            url: '@Url.Action("Edit", "ClassInfo")/?classInfoId=' + id,
            type: 'POST',
            success: function (data) {
                showModalCommon("Thông tin Khách hàng", data);
            },
            error: function () {
                swal("Rất tiếc", "Vui lòng kiểm tra Internet!", "error");
            }
        });
    }

    function deleteClassInfo(id) {
        swal({
            title: "Bạn muốn xóa?",
            text: "Bạn thực sự muốn xóa Thông tin này!",
            type: "info",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Xóa!",
            closeOnConfirm: false,
            showLoaderOnConfirm: true,
        },
        function () {
            $.ajax({
                url: '@Url.Action("Delete", "ClassInfo")?classInfoId=' + id,
                type: 'POST',
                success: function (data) {
                    if (data.Result) {
                        swal("Thông báo", 'Xóa thành công', "success");
                        reloadTableClassInfo();
                    }
                    else {
                        swal("Thông báo", data.ErrorString, "error");
                    }
                },
                error: function () {
                    swal("Rất tiếc", "Vui lòng kiểm tra Internet!", "error");
                }
            });
        });

    }

</script>
