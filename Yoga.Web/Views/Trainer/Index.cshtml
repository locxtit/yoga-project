@{
    ViewBag.Title = "Danh sách tỉnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">@ViewBag.Title</h2>
<button class="btn brn-primary" onclick="updateTrainer();">Thêm tỉnh</button>
<table id="dataTable" class="display">
    <thead>
        <tr>
            <th width="100px;">#</th>
            <th>Tên Huấn luyện viên</th>
            <th>Diện thoại</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Kinh nghiệm</th>
            <th>Chuyên môn</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody></tbody>
    <tfoot>
        <tr>
            <th>#</th>
            <th>Tên Huấn luyện viên</th>
            <th>Diện thoại</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Kinh nghiệm</th>
            <th>Chuyên môn</th>
            <th>Trạng thái</th>
        </tr>
    </tfoot>
</table>

<script>
    $(document).ready(function () {

        $('#dataTable').DataTable({
            serverSide: false,
            ajax: {
                "url": "/Trainer/GetList/",
                "dataSrc": ""
            },
            columns: [
                { "data": "TrainerId" },
                { "data": "TrainerName" },
                { "data": "Phone" },
                { "data": "Email" },
                { "data": "Address" },
                { "data": "Experience" },
                { "data": "Subject" },
                { "data": "Status.Name" },
            ],
            fnPreDrawCallback: function (settings) {
            },
            fnDrawCallback: function (settings) {
            },
            fnRowCallback: function (nRow, aData) {
                $('td:eq(0)', nRow).html(setIconVisibility(aData.TrainerId));
            },
        });
    });

    function getAjaxSource() {
        return '/Trainer/GetList';
    }

    function reloadTableTrainer() {
        var oTable = $('#dataTable').DataTable();
        oTable.ajax.reload();
    }

    function setIconVisibility(id) {
        var editString = '<a class="action-icon" style="color:#07078C" href= "javascript:void(0)" onclick="updateTrainer(' + id + ')"><span class="glyphicon glyphicon-edit" title="Sửa"></span></a>  ';
        var delString = '<a class="action-icon" style="color:#E91E63" href= "javascript:void(0)" onclick="deleteTrainer(' + id + ')" ><span class="glyphicon glyphicon-remove-circle" title="Xóa"></span></a>';
        return editString + delString;
    }

    function updateTrainer(id) {
        $.ajax({
            url: '@Url.Action("Edit", "Trainer")/?trainerId=' + id,
            type: 'POST',
            success: function (data) {
                showModalCommon("Thông tin tỉnh", data);
            },
            error: function () {
                swal("Rất tiếc", "Vui lòng kiểm tra Internet!", "error");
            }
        });
    }

    function deleteTrainer(id) {
        swal({
            title: "Bạn muốn xóa?",
            text: "Bạn thực sự muốn xóa Thông tin này!",
            type: "info",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Xóa!",
            closeOnConfirm: false,
            showLoaderOnConfirm: true,
        },
        function () {
            $.ajax({
                url: '@Url.Action("Delete", "Trainer")?trainerId=' + id,
                type: 'POST',
                success: function (data) {
                    if (data.Result) {
                        swal("Thông báo", 'Xóa thành công', "success");
                        reloadTableTrainer();
                    }
                    else {
                        swal("Thông báo", data.ErrorString, "error");
                    }
                },
                error: function () {
                    swal("Rất tiếc", "Vui lòng kiểm tra Internet!", "error");
                }
            });
        });

}

</script>
