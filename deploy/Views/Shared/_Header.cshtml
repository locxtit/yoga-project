        <div class="navbar-header">
            <a class="navbar-brand" href="#">Yoga Management</a>
        </div>
        <ul class="nav navbar-nav">
            @*<li class="active"><a href="#">Home</a></li>
      <li><a href="#">Page 1</a></li>
